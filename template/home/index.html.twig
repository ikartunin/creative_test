{% extends 'main.html.twig' %}

{% block title %}{{ trailers | length }} iTunes Movie trailers{% endblock %}

{% block content %}
    <div class="container">

        <h1 class="mt-5 mb-4">{{ trailers | length }} iTunes Movie trailers</h1>
        <div class="junior row">
            <div class="col-md-3">
                DateTime: {{ datetime }}
            </div>
            <div class="col-md-3">
                Namespace: {{ namespace }}
            </div>
            <div class="col-md-3">
                Class: {{ class }}
            </div>
            <div class="col-md-3">
                Method: {{ method }}
            </div>
        </div
        <table class="table table-bordered">
            {% for trailer in trailers %}
                <tr>
                    <td>{{ trailer.title }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}

